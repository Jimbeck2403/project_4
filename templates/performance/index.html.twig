{% extends 'base.html.twig' %}

{% block title %}Shows{% endblock %}

{% block body %}
    <h1>Nos shows :</h1>
    {% for performance in performances %}
    <div class="card mb-3">
        <h3 class="card-header">{{ performance.name }}</h3>
            <img style="height: 500px; width: 100%; display: block;" src="{{ performance.image }}" alt="Card image">
        <div class="card-body">
            {{ performance.description }}
        <div class="card-body">
            <a href="{{ path('show_performance', {'id': performance.id}) }}" class="card-link">Pour en savoir plus</a>
    </div>
    {% endfor %}
{% endblock %}
