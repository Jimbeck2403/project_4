{% extends 'base.html.twig' %}

{% block title %}Faites entrer les artistes !{% endblock %}

{% block body %}
    {% for artist in artists %}
        <div class="card mb-3">
            <h3 class="card-header">{{ artist.name }}</h3>

            <img style="height: 500px; width: 100%; display: block;" src="{{ artist.image }}" alt="Card image">
            <div class="card-body">
                {{ artist.description }}
            <div class="card-body">
                <a href="{{ path('show_artist', {'id': artist.id}) }}" class="card-link">Pour en savoir plus</a>
        </div>
    {% endfor %}
{% endblock %}
