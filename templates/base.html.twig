                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_register')}}">Register</a>
                    </li>

                    {% if app.user %}
                    {{ app.user.email }}
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}"> Se d√©connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}"> Se connecter</a>
                    </li>
                    {% endif %}
                </ul>

            </div>
        </nav>
        <div class="container">
        {% block body %}{% endblock %}
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
